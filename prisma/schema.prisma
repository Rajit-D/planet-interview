generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organisations {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  adminNo   Int
  avatar    String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  Admins    Admins[]
}

model Admins {
  id            String        @id @default(uuid())
  name          String
  email         String        @unique
  password      String
  organisation  String
  position      String
  avatar        String
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @default(now())
  organisations Organisations @relation(fields: [organisation], references: [id])
}
