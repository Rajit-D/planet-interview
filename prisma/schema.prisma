generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organisations {
  id        String   @id @default(uuid()) @db.Uuid
  name      String   @db.VarChar(255)
  email     String   @unique @db.VarChar(255)
  password  String   @db.VarChar(255)
  adminNo   Int
  avatar    String   @db.VarChar(255)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  Admins    Admins[]
}

model Admins {
  id            String        @id @default(uuid()) @db.Uuid
  name          String        @db.VarChar(255)
  email         String        @unique @db.VarChar(255)
  password      String        @db.VarChar(255)
  organisation  String        @db.Uuid
  position      String        @db.VarChar(255)
  avatar        String        @db.VarChar(255)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @default(now())
  organisations Organisations @relation(fields: [organisation], references: [id])
  Roles         Roles[]
}

model Roles {
  id         String       @id @default(uuid()) @db.Uuid
  name       String       @db.VarChar(255)
  skills     String       @db.VarChar(255)
  experience Int
  minATS     Int
  createdBy  String       @db.Uuid
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @default(now())
  Admins     Admins       @relation(fields: [createdBy], references: [id])
  Candidates Candidates[]
}

model Candidates {
  id           String   @id @default(uuid()) @db.Uuid
  name         String   @db.VarChar(255)
  organisation String   @db.VarChar(255)
  experience   Int
  role         String   @db.Uuid
  cv           String   @db.VarChar(255)
  address      String   @db.VarChar(255)
  email        String   @db.VarChar(255)
  phoneNo      String   @db.VarChar(20)
  selected     Boolean
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())
  Roles        Roles    @relation(fields: [role], references: [id])
}
